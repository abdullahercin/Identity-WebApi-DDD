{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",


  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AssistIdentityDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },

  "Email": {
    "Smtp": {
      "Host": "your-mail-server.com",
      "Port": 587,
      "Username": "your-username",
      "Password": "your-password",
      "EnableSsl": true,
      "TimeoutMs": 30000
    },
    "FromEmail": "noreply@yourcompany.com",
    "FromName": "Your Company Name",
    "SupportEmail": "support@yourcompany.com",
    "BulkEmail": {
      "MaxConcurrentEmails": 3, // Yerel sunucu için düşük tutun
      "BatchSize": 50, // Küçük batch'ler
      "BatchDelayMs": 2000 // 2 saniye bekle
    }
  },

  "App": {
    "BaseUrl": "https://your-domain.com",
    "Urls": {
      "Login": "/login",
      "EmailConfirmation": "/confirm-email",
      "PasswordReset": "/reset-password",
      "SecuritySettings": "/security"
    }
  },

  "Cache": {
    "Provider": "Redis",
    "Redis": {
      "ConnectionString": "172.20.40.61:6379",
      "Database": 0,
      "KeyPrefix": "assist:",
      "ConnectTimeoutSeconds": 5,
      "CommandTimeoutSeconds": 5,
      "RetryCount": 3,
      "UseSsl": false
    },
    "Behavior": {
      "DefaultExpirationMinutes": 30,
      "SessionExpirationMinutes": 60,
      "PermissionExpirationMinutes": 30,
      "EnableSlidingExpiration": true,
      "EnableCompression": true,
      "CompressionThresholdBytes": 1024,
      "EnableStatistics": true
    },
    "Keys": {
      "Separator": ":",
      "User": {
        "Profile": "user:{userId}",
        "Session": "user:{userId}:session",
        "Permissions": "user:{userId}:permissions",
        "Roles": "user:{userId}:roles",
        "Statistics": "user:{userId}:stats"
      }
    },
    "Performance": {
      "MaxConnectionPoolSize": 50,
      "EnableMultiplexing": true,
      "EnablePipeline": true,
      "MaxBatchSize": 100,
      "EnableFailover": true,
      "HealthCheckIntervalSeconds": 30
    }
  },

  "JWT": {
    "SecretKey": "ThisIsAVeryLongSecretKeyForJWTTokenGeneration1234567890!@#$%^&*()",
    "Issuer": "Assist.Identity.API",
    "Audience": "Assist.Identity.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  }
}
